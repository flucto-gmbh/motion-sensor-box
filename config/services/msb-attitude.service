[Unit]
Description=Motion Sensor Box Attitude Estimation Service
After=msb-imu.service
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-attitude
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/msb/.config"
User=msb
ExecStart=/usr/bin/python3 /home/msb/motion-sensor-box/run/msb_attitude.py

[Install]
WantedBy=multi-user.target
