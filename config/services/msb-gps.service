[Unit]
Description=Motion Sensor Box Global Navigation Satellite System Service
After=network.target
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-gps
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/msb/.config"
Environment="PYTHONPATH=/usr/local/lib/python3/dist-packages/"
User=msb
ExecStart=/usr/bin/python3 /home/msb/motion-sensor-box/run/msb_gps.py

[Install]
WantedBy=multi-user.target
