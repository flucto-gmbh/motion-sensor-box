[Unit]
Description=Motion Sensor Box LoRa Messaging Service
After=msb-serialless-on.service
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-lora
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/msb/.config"
User=msb
ExecStart=/usr/bin/python3 /home/msb/motion-sensor-box/run/msb_lora.py

[Install]
WantedBy=multi-user.target
