[Unit]
Description=Motion Sensor Box Status Service
After=network.target
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-status
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/msb/.config"
User=msb
ExecStart=/usr/bin/python3 /home/msb/motion-sensor-box/run/msb_status.py

[Install]
WantedBy=multi-user.target
